---
import "../styles/global.css";

const { title = "Astro", description = "" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
  </head>

  <body class="flex min-h-screen flex-col bg-gray-50 text-gray-900 antialiased">
    <!-- Header -->
    <header class="mb-4 bg-white shadow-lg">
      <div class="mx-auto flex max-w-6xl items-center justify-between px-4 py-4">
        <a href="/home" class="flex items-center">
          <img 
            src="/images/logo.png" 
            alt="Abasa Logo" 
            class="h-8 w-auto"
            loading="lazy"
          />
        </a>
        <nav class="space-x-4 text-md text-gray-600">
          <a href="/home" class="hover:text-blue-900 transition-colors font-bold">Inicio</a>
          <a href="/contacto" class="hover:text-blue-900 transition-colors font-bold">Contacto</a>
          <a href="/" class="hover:text-red-600 transition-colors inline-flex items-center gap-1 font-bold ">

            Logout
          </a>
        </nav>
      </div>
    </header>

    <!-- Main -->
    <main class="mx-auto w-full max-w-6xl flex-1 px-4 py-8 bg-transparent">
      <slot />
    </main>

    <!-- Footer fijo al final -->
    <footer class="mt-auto bg-gray-900 backdrop-blur-md">
      <div class="mx-auto max-w-6xl px-4 py-6 text-center text-sm text-gray-500">
        © {new Date().getFullYear()} Abasa SSR Demo — By Orlando Cardona.
      </div>
    </footer>
  </body>
</html>
