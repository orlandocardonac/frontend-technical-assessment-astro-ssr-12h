---
import Layout from "../layouts/Layout.astro";

const contactData = await fetch(
  "https://gist.githubusercontent.com/orlandocc/abee1de4a4aead52630f5e241f27c95a/raw/8fc3e59722f91343361281c84ca4088ced038440/orlandocardona",
)
  .then((response) => response.json())
  .then((data) => data.data)
  .catch((error) => {
    console.error("Error fetching contact data:", error);
    return null;
  });

const title = "Contacto | Abasa";
const description =
  "Ponte en contacto con nosotros para más información sobre nuestros servicios.";
---

<Layout title={title} description={description}>
  <h1 class="mb-6 text-3xl font-bold lg:text-3xl">Contacto</h1>
  <div class="mx-auto max-w-4xl lg:max-w-6xl px-4 py-12 sm:px-6 lg:px-8">
    {
      contactData ? (
        <div class="bg-white rounded-2xl overflow-hidden">
          <div class="bg-gray-50 px-6 py-8 sm:p-10">
            <div class="flex flex-col items-center text-center sm:flex-row sm:text-left">
              {contactData.img_url && (
                <div class="flex-shrink-0 mb-6 sm:mb-0 sm:mr-8">
                  <img
                    class="h-32 w-32 lg:h-64 lg:w-64 rounded-full object-cover border-4 border-white shadow-lg"
                    src={contactData.img_url}
                    alt={contactData.nombre}
                    loading="lazy"
                  />
                </div>
              )}
              <div>
                <h1 class="mb-1 text-2xl lg:text-4xl font-extrabold tracking-tight text-gray-500">
                  {contactData.nombre}
                </h1>
                <p class="text-gray-600 font-medium lg:text-xl">
                  {contactData.profesion}
                </p>

                <div class="mt-3 text-gray-600 lg:text-xl pt-3">
                  <p class="flex items-center justify-center sm:justify-start">
                    <svg
                      class="h-5 w-5 lg:h-8 lg:w-8 text-red-300 mr-2"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                      />
                    </svg>
                    <a
                      href={`mailto:${contactData.correo}`}
                      class="hover:text-red-300 transition-colors"
                    >
                      {contactData.correo}
                    </a>
                  </p>
                  <p class="flex items-center justify-center sm:justify-start mt-2 ">
                    <svg
                      class="h-5 w-5 lg:h-8 lg:w-8 text-red-300 mr-2"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                      />
                    </svg>
                    <a
                      href={`tel:${contactData.telefono.replace(/\s+/g, "")}`}
                      class="hover:text-red-300 transition-colors"
                    >
                      {contactData.telefono}
                    </a>
                  </p>
                  <p class="flex items-center justify-center sm:justify-start mt-2">
                    <svg
                      class="h-5 w-5 lg:h-8 lg:w-8 text-red-300 mr-2"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                      />
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                      />
                    </svg>
                    {contactData.ubicacion.ciudad},{" "}
                    {contactData.ubicacion.estado}, {contactData.ubicacion.pais}
                  </p>
                </div>
              </div>
            </div>

            {contactData.descripcion && (
              <div class="mt-8 border-t border-gray-300 pt-8">
                <h3 class="text-lg lg:text-xl font-medium text-gray-900 mb-4">
                  Acerca de mí
                </h3>
                <p class="text-gray-600 lg:text-lg">
                  {contactData.descripcion}
                </p>

                <p class="text-red-300 text-sm lg:text-sm pt-5">
                  *Esta página se generó consumiendo un endpoint externo, puedes
                  ver el código fuente en GitHub.
                </p>
              </div>
            )}
          </div>
        </div>
      ) : (
        <div class="text-center py-12 bg-white rounded-lg shadow">
          <p class="text-gray-600">
            No se pudieron cargar los datos de contacto. Por favor, intente más
            tarde.
          </p>
        </div>
      )
    }
  </div>
</Layout>
